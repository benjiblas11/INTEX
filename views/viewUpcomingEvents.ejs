<!DOCTYPE html>
<html>
<head>
  <title>Upcoming Events</title>
  <style>
    /* Styles for the table displaying records */
    table {
      width: 80%; /* Table width */
      margin: 20px auto; /* Center table with margin */
      border-collapse: collapse; /* Collapse table borders */
      font-size: 10px; /* Reduce the font size of the table */
    }

    th, td {
      border: 1px solid #ddd; /* Add a light border to table cells */
      padding: 5px; /* Reduce the padding to decrease row height */
      text-align: center; /* Center-align text in cells */
      line-height: 1.2; /* Adjust line height for smaller rows */
    }

    th {
      background-color: #F2F2F2; /* Set background color for header row */
      font-weight: bold; /* Make header text bold */
    }

    button {
      padding: 4px 8px; /* Adjust button size */
      margin: 2px; /* Add small space between buttons */
      font-size: 12px; /* Adjust button font size */
      cursor: pointer; /* Change cursor to pointer on hover */
    }
  </style>
</head>
<body>
  <!-- Title for Upcoming Records -->
  <h1 style="text-align: center;">Upcoming Events</h1>

  <!-- Table to display records -->
  <table>
    <thead>
      <tr>
        <!-- Column headers for the table -->
        <th>Total Expected Attendance</th>
        <th>Expected Attendance (Minors)</th>
        <th>Expected Attendance (Adults)</th>
        <th>Suggested Team Members</th>
        <th>1st Date Preference</th>
        <th>2nd Date Preference</th>
        <th>3rd Date Preference</th>
        <th>Event Duration</th>
        <th>Share Story</th>
        <th>Event Type</th>
        <th>Expected Number of Sewing Machines</th>
        <th>Expected Number of Serger Machines</th>
        <th>Event Address</th>
        <th>Contact Name</th>
        <th>Email</th>
        <th>Phone Number</th>
        <th>Approved Status</th>
        <th>Confirmed Status</th>
        <th>Edit / Delete</th>
      </tr>
    </thead>
    <tbody>
      <!-- Check if there are Pokémon records to display -->
      <% if (event.length > 0) { %>
        <!-- Loop through the Pokémon records and display each row -->
        <% event.forEach(row => { %>
          <tr>
            <!-- Hidden inputs for Pokémon ID and type ID (not used directly here, but could be useful in forms) -->
            <input type="hidden" value="row.id">
            
            <!-- Display the Pokémon details in each column -->
            <td><%= row.exp_total_attendance %></td>
            <td><%= row.exp_under_18 %></td> 
            <td><%= row.exp_over_18 %></td> 
            <td><%= row.suggested_team_count %></td>
            <td><%= row.first_datetime_pref %></td> 
            <td><%= row.sec_datetime_pref %></td> 
            <td><%= row.third_datetime_pref %></td> 
            <td><%= row.event_duration %></td> 
            <td><%= row.jen_share_story %></td>
            <td><%= row.event_type %></td> 
            <td><%= row.exp_num_sew_machines %></td> 
            <td><%= row.exp_num_serger_machines %></td>
            <td><%= row.event_street + ", " + row.event_city + ", " + row.event_state + ", " + row.event_zip %></td> 
            <td><%= row.event_contact_first_name + ", " + row.event_contact_last_name %></td> 
            <td><%= row.event_contact_email %></td> 
            <td><%= row.event_contact_phone_num %></td> 
            <td><%= row.approved_status ? 'Yes' : 'No' %></td> <!-- Display 'Yes' if active, otherwise 'No' -->
            <td><%= row.confirmed_status ? 'Yes' : 'No' %></td>
            
            <td>
              <!-- each form is a submit button with action  -->
               
                <!-- route in line 52 of .js -->
                <form action="/editEvents/<%= row.event_id %>" method="GET" style="display:inline;">
                  <button type="submit">Edit</button>
                </form>
  
                <form action="/deleteEvents/<%= row.event_id %>" method="POST" style="display:inline;">
                  <button type="submit" onclick="return confirm('Are you sure you want to delete this record?');">Delete</button>
                </form>
                
              </td>
            </tr>

          </tr>
        <% }) %>
      <!-- If no records are available, show a "No data available" message -->
      <% } else { %>
        <tr>
          <td colspan="7">No data available</td>
        </tr>
      <% } %>
    </tbody>
  </table>

  <form action="/event-request" method="GET" style="display: flex; justify-content: center; margin: 20px 0;">
    <button type="submit">Create New Event</button>
  </form>

  <!-- Button to navigate to the "UserHome" page -->
  <form action="/user-home" method="GET" style="display: flex; justify-content: center; margin: 20px 0;">
    <button type="submit">Back to Admin Dashboard</button>
  </form>


  
</body>
</html>