<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Edit Admin</title>
  <link rel="stylesheet" href="/styles.css"> <!-- Link to your CSS file -->
</head>
<style>/* General styling */
  body {
    font-family: Arial, sans-serif;
    background-color: #d9f9f9;
    margin: 0;
    padding: 0;
  }
  
  /* Center the form */
  h1 {
    text-align: center;
    margin-top: 20px;
    color: #00796b;
  }
  
  form {
    max-width: 600px;
    margin: 20px auto;
    background-color: #fff;
    padding: 20px;
    border-radius: 8px;
    box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
  }
  
  /* Style for form elements */
  div {
    margin-bottom: 15px;
  }
  
  label {
    display: block;
    font-weight: bold;
    margin-bottom: 5px;
    color: #333;
  }
  
  input {
    width: 100%;
    padding: 10px;
    border: 1px solid #ccc;
    border-radius: 4px;
    box-sizing: border-box;
    font-size: 16px;
  }
  
  input[type="password"], input[type="text"], input[type="email"], input[type="date"] {
    max-width: 100%;
  }
  
  input:focus {
    border-color: #5b9bd5;
    outline: none;
  }
  
  /* Button styling */
  button {
    background-color: #4db6ac;
    color: white;
    padding: 10px 20px;
    border: none;
    border-radius: 4px;
    cursor: pointer;
    font-size: 16px;
    width: 100%;
  }
  
  button:hover {
    background-color: #00796b;
  }
  
  button:active {
    background-color: #3e8e41;
  }
  </style>
<body>
  <h1>Edit Admin</h1>
  <form action="/editAdmin/<%= admin.id %>" method="POST">
    <!-- Admin First Name -->
    <div>
      <label for="admin_first_name">First Name:</label>
      <input 
        type="text" 
        id="admin_first_name" 
        name="admin_first_name" 
        value="<%= admin.admin_first_name %>" 
        required 
        placeholder="Enter first name"
      >
    </div>

    <!-- Admin Last Name -->
    <div>
      <label for="admin_last_name">Last Name:</label>
      <input 
        type="text" 
        id="admin_last_name" 
        name="admin_last_name" 
        value="<%= admin.admin_last_name %>" 
        required 
        placeholder="Enter last name"
      >
    </div>

    <!-- Admin Email -->
    <div>
      <label for="admin_email">Email:</label>
      <input 
        type="email" 
        id="admin_email" 
        name="admin_email" 
        value="<%= admin.admin_email %>" 
        required 
        placeholder="Enter email address"
      >
    </div>

    <!-- Admin Password -->
    <div>
      <label for="hashed_password">Password:</label>
      <input 
        type="password" 
        id="hashed_password" 
        name="hashed_password" 
        required 
        placeholder="Enter new password"
      >
    </div>

    <!-- Created At -->
    <div>
      <label for="created_at">Created At:</label>
      <input 
        type="date" 
        id="created_at" 
        name="created_at" 
        value="<%= admin.created_at.toISOString().split('T')[0] %>" 
      >
    </div>

    <!-- Updated At -->
    <div>
      <label for="updated_at">Updated At:</label>
      <input 
        type="date" 
        id="updated_at" 
        name="updated_at" 
        value="<%= admin.updated_at.toISOString().split('T')[0] %>" 
      >
    </div>

    <!-- Submit Button -->
    <div>
      <button type="submit" class="button">Update Admin</button>
    </div>
  </form>
</body>
</html>
