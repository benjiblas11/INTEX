        <label for="event_zip">Event Zip:</label>
        <input type="text" id="event_zip" name="event_zip" value="<%= event.event_zip %>" required><br>

        <label for="jen_share_story">Jen Share Story:</label>
        <input type="checkbox" id="jen_share_story" name="jen_share_story" <%= event.jen_share_story ? 'checked' : '' %>><br>

        <label for="exp_num_sew_machines">Expected Number of Sewing Machines:</label>
        <input type="number" id="exp_num_sew_machines" name="exp_num_sew_machines" value="<%= event.exp_num_sew_machines %>" required><br>

        <label for="exp_num_serger_machines">Expected Number of Serger Machines:</label>
        <input type="number" id="exp_num_serger_machines" name="exp_num_serger_machines" value="<%= event.exp_num_serger_machines %>" required><br>

        <label for="exp_under_18">Expected Number of Participants Under 18:</label>
        <input type="number" id="exp_under_18" name="exp_under_18" value="<%= event.exp_under_18 %>" required><br>

        <label for="exp_over_18">Expected Number of Participants Over 18:</label>
        <input type="number" id="exp_over_18" name="exp_over_18" value="<%= event.exp_over_18 %>" required><br>

        <label for="event_contact_first_name">Contact First Name:</label>
        <input type="text" id="event_contact_first_name" name="event_contact_first_name" value="<%= event.event_contact_first_name %>" required><br>

        <label for="event_contact_last_name">Contact Last Name:</label>
        <input type="text" id="event_contact_last_name" name="event_contact_last_name" value="<%= event.event_contact_last_name %>" required><br>

        <label for="event_contact_phone_num">Contact Phone Number:</label>
        <input type="text" id="event_contact_phone_num" name="event_contact_phone_num" value="<%= event.event_contact_phone_num %>" required><br>

        <label for="event_contact_email">Contact Email:</label>
        <input type="email" id="event_contact_email" name="event_contact_email" value="<%= event.event_contact_email %>" required><br>

        <label for="approved_status">Approved Status:</label>
        <input type="checkbox" id="approved_status" name="approved_status" <%= event.approved_status ? 'checked' : '' %>><br>

        <label for="confirmed_status">Completed Status:</label>
        <input type="checkbox" id="confirmed_status" name="confirmed_status" <%= event.confirmed_status ? 'checked' : '' %>><br>

        <label for="add_info">Additional Info:</label>
        <textarea id="add_info" name="add_info"><%= event.add_info %></textarea><br>

        <button type="submit">Save Changes</button>
    </form>
</body>
</html>
