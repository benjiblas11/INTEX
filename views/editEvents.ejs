            <option value="CT" <%= event.event_state === 'CT' ? 'selected' : '' %>>Connecticut</option>
            <option value="DE" <%= event.event_state === 'DE' ? 'selected' : '' %>>Delaware</option>
            <option value="FL" <%= event.event_state === 'FL' ? 'selected' : '' %>>Florida</option>
            <option value="GA" <%= event.event_state === 'GA' ? 'selected' : '' %>>Georgia</option>
            <option value="HI" <%= event.event_state === 'HI' ? 'selected' : '' %>>Hawaii</option>
