<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Add Volunteer as Admin</title>
  <link rel="stylesheet" href="/styles.css"> <!-- Link your CSS file -->
</head>
<body>
  <h1>Add New Volunteer</h1>
  <form action="/addVolunteers" method="POST">
    <!-- Volunteer First Name -->
    <div>
      <label for="vol_first_name">First Name:</label>
      <input 
        type="text" 
        id="vol_first_name" 
        name="vol_first_name" 
        required 
        placeholder="Enter first name"
      >
    </div>

    <!-- Volunteer Last Name -->
    <div>
      <label for="vol_last_name">Last Name:</label>
      <input 
        type="text" 
        id="vol_last_name" 
        name="vol_last_name" 
        required 
        placeholder="Enter last name"
      >
    </div>

    <!-- Volunteer Email -->
    <div>
      <label for="vol_email">Email:</label>
      <input 
        type="email" 
        id="vol_email" 
        name="vol_email" 
        required 
        placeholder="Enter email address"
      >
    </div>

    <!-- Volunteer Phone Number -->
    <div>
      <label for="vol_phone_num">Phone Number:</label>
      <input 
        type="tel" 
        id="vol_phone_num" 
        name="vol_phone_num" 
        required 
        placeholder="Enter phone number"
      >
    </div>

    <!-- Volunteer ZIP -->
    <div>
      <label for="vol_zip">ZIP Code:</label>
      <input 
        type="text" 
        id="vol_zip" 
        name="vol_zip" 
        required 
        placeholder="Enter ZIP code"
      >
    </div>

    <!-- Referral Source -->
    <div>
      <label for="referral_source">Referral Source:</label>
      <input 
        type="text" 
        id="referral_source" 
        name="referral_source" 
        placeholder="Enter referral source"
      >
    </div>

    <!-- Sewing Level -->
    <div>
      <label for="sewing_level">Sewing Level:</label>
      <select id="sewing_level" name="sewing_level" required>
        <option value="" disabled selected>Select sewing level</option>
        <option value="Beginner">Beginner</option>
        <option value="Intermediate">Intermediate</option>
        <option value="Advanced">Advanced</option>
      </select>
    </div>

    <!-- Willing Hours Per Month -->
    <div>
      <label for="willing_hours_per_month">Willing Hours Per Month:</label>
      <input 
        type="number" 
        id="willing_hours_per_month" 
        name="willing_hours_per_month" 
        required 
        min="0" 
        placeholder="Enter hours"
      >
    </div>

    <!-- Member Since -->
    <div>
      <label for="member_since">Member Since:</label>
      <input 
        type="date" 
        id="member_since" 
        name="member_since" 
        value="<%= new Date().toISOString().split('T')[0] %>" 
      >
    </div>

    <!-- Submit Button -->
    <div>
      <button type="submit" class="button">Add Volunteer</button>
    </div>
  </form>
</body>
</html>
