    <!-- Custom CSS -->
    <link rel="stylesheet" href="/css/style.css" />

</head>
<body>
    <!-- Navbar -->
    <nav class="navbar bg-teal">
        <div class="navbar-container">
            <a href="/" class="navbar-logo">Turtle Shelter Project</a>
            <ul class="nav-items">
                <li class="nav-item"><a href="/jensstory" class="nav-link">Jen's Story</a></li>
                <li class="nav-item"><a href="thank-you-to-our-sponsors" class="nav-link">Thank You to Our Sponsors</a></li>
                <li class="dropdown nav-item">
                    <a href="/about" class="dropdown-btn nav-link">About</a>
                    <ul class="dropdown-menu">
                        <li><a href="/homeless">Homelessness and Hypothermia</a></li>
                        <li><a href="/about">Our Tech</a></li>
                    </ul>
                    </li>
                <li class="dropdown nav-item">
                    <a href="/howucanhelp" class="dropdown-btn nav-link">How You Can Help</a>
                    <ul class="dropdown-menu">
                        <li><a href="/howucanhelp">You Can Make a Difference</a></li>
                        <li><a href="/donateMain">Donate</a></li>
                        <li><a href="/event-request-main">Schedule Your Own Event</a></li>
                        <li><a href="/become-sponsor">Become a Partner or Sponsor</a></li>
                        <li><a href="/volunteer-main">Become a Volunteer</a></li>
                    </ul>
                    </li>
                <li class="nav-item"><a href="/login" class="nav-link">Login</a></li>
                </ul>
            </div>
    </nav>

    <!-- Header Image-->
    <div class="image-box">
        <img src="/images/coldhome.jpg" alt="How You Can Help Image">
    </div>

    <!-- Help Boxes -->
    <div class="help-boxes-container">
        <div class="help-box">
            <h3>Donate</h3>
            <p>Your donations help provide lifesaving warmth and resources to those in need.</p>
            <a href="/donateMain" class="learn-more-btn">Learn More</a>
        </div>
        <div class="help-box">
            <h3>Schedule Your Own Event</h3>
            <p>Organize an event in your community to make a difference together.</p>
            <a href="/event-request-main" class="learn-more-btn">Learn More</a>
        </div>
        <div class="help-box">
            <h3>Become a Partner or Sponsor</h3>
            <p>Join our mission by becoming a partner or sponsoring our efforts.</p>
            <a href="/become-sponsor" class="learn-more-btn">Learn More</a>
        </div>
        <div class="help-box">
            <h3>Become a Volunteer</h3>
            <p>Share your time and skills to help us reach those in need.</p>
            <a href="/volunteer-main" class="learn-more-btn">Learn More</a>
        </div>
    </div>
        <!-- First Thank You Modal -->
    <div id="thankYouModal" style="display: none;">
        <div class="modal-overlay">
            <div class="modal-content">
                <h2>Thank You For Volunteering!</h2>
                <p>We will be in touch soon.</p>
                <button class="modal-button" onclick="closeModal()">Close</button>
            </div>
        </div>
    </div>

    <!-- Second Thank You Modal -->
    <div id="thankYouModal2" style="display: none;">
        <div class="modal-overlay">
            <div class="modal-content">
                <h2>Thank You For Requesting An Event!</h2>
                <p>We will be in touch soon.</p>
                <button class="modal-button" onclick="closeModal2()">Close</button>
            </div>
        </div>
    </div>

    <!-- Modal Styles -->
    <style>
    .modal-overlay {
        position: fixed;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background-color: rgba(0, 0, 0, 0.6);
        display: flex;
        justify-content: center;
        align-items: center;
        z-index: 1000;
    }

    .modal-content {
        background-color: #fff;
        color: #333;
        padding: 30px;
        border-radius: 10px;
        text-align: center;
        width: 90%;
        max-width: 400px;
        box-shadow: 0 5px 15px rgba(0, 0, 0, 0.3);
    }

    .modal-button {
        background-color: #008080;
        color: #fff;
        border: none;
        padding: 10px 20px;
        border-radius: 5px;
        font-size: 16px;
        cursor: pointer;
        margin-top: 20px;
        transition: background-color 0.3s ease;
    }

    .modal-button:hover {
        background-color: #00b3b3;
    }
    </style>

    <!-- Modal Scripts -->
    <script>
    // Show modal based on URL parameters
    const urlParams = new URLSearchParams(window.location.search);
    
    if (urlParams.get('success') === 'true') {
        document.getElementById('thankYouModal').style.display = 'block';
    } else if (urlParams.get('eventRequest') === 'true') {
        document.getElementById('thankYouModal2').style.display = 'block';
    }

    // Close first modal
    function closeModal() {
        document.getElementById('thankYouModal').style.display = 'none';
    }

    // Close second modal
    function closeModal2() {
        document.getElementById('thankYouModal2').style.display = 'none';
    }
    </script>

  

    <!-- FOOTER -->
    <footer class="footer bg-dark text-white py-4">
        <div class="container">
            <div class="row justify-content-between">
                <!-- Footer Info Section -->
                <div class="col-md-3 footer-info">
                    <p>&copy; Turtle Shelter Project</p>
                    <p>PO Box 382, Kaysville, UT 84037</p>
                </div>
                
                <!-- Footer Contact Section -->
                <div class="col-md-3 footer-contact">
                    <p><a href="tel:8018723190" class="footer-phone text-white">Call us: (801) 872-3190</a></p>
                    <p><a href="mailto:turtleshelterproject@gmail.com" class="footer-phone text-white">Email: turtleshelterproject@gmail.com</a></p>
                </div>
    
                <!-- Social Media Section -->
                <div class="col-md-3 footer-social text-center">
                    <a href="https://www.facebook.com/turtleshelterproject" target="_blank" class="social-icon">
                        <img src="/images/facebook.png" alt="Facebook Icon" class="social-img">
                    </a>
                    <a href="https://www.instagram.com/turtleshelterproject/" target="_blank" class="social-icon">
                        <img src="/images/instagram.png" alt="Instagram Icon" class="social-img">
                    </a>
                </div>
            </div>
        </div>
    </footer>

</body>
