<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Edit Volunteer</title>
  <link rel="stylesheet" href="/styles.css"> <!-- Link your CSS file -->
</head><style>/* General styling */
  body {
    font-family: Arial, sans-serif;
    background-color: #d9f9f9;
    margin: 0;
    padding: 0;
  }
  
  /* Center the form */
  h1 {
    text-align: center;
    margin-top: 20px;
    color: #00796b;
  }
  
  form {
    max-width: 600px;
    margin: 20px auto;
    background-color: #fff;
    padding: 20px;
    border-radius: 8px;
    box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
  }
  
  /* Style for form elements */
  div {
    margin-bottom: 15px;
  }
  
  label {
    display: block;
    font-weight: bold;
    margin-bottom: 5px;
    color: #333;
  }
  
  input, select {
    width: 100%;
    padding: 10px;
    border: 1px solid #ccc;
    border-radius: 4px;
    box-sizing: border-box;
    font-size: 16px;
  }
  
  input[type="number"], input[type="tel"], input[type="text"], input[type="email"] {
    max-width: 100%;
  }
  
  select {
    font-size: 16px;
  }
  
  input:focus, select:focus {
    border-color: #5b9bd5;
    outline: none;
  }
  
  /* Button styling */
  button {
    background-color: #4db6ac;
    color: white;
    padding: 10px 20px;
    border: none;
    border-radius: 4px;
    cursor: pointer;
    font-size: 16px;
    width: 100%;
  }
  
  button:hover {
    background-color: #00796b;
  }
  
  button:active {
    background-color: #3e8e41;
  }
  </style>
<body>
  <h1>Edit Volunteer Details</h1>
  <form action="/editVolunteers/<%= volunteer.vol_id %>" method="POST">
    <!-- Volunteer First Name -->
    <div>
      <label for="vol_first_name">First Name:</label>
      <input 
        type="text" 
        id="vol_first_name" 
        name="vol_first_name" 
        value="<%= volunteer.vol_first_name %>" 
        required 
        placeholder="Enter first name"
      >
    </div>

    <!-- Volunteer Last Name -->
    <div>
      <label for="vol_last_name">Last Name:</label>
      <input 
        type="text" 
        id="vol_last_name" 
        name="vol_last_name" 
        value="<%= volunteer.vol_last_name %>" 
        required 
        placeholder="Enter last name"
      >
    </div>

    <!-- Volunteer Email -->
    <div>
      <label for="vol_email">Email:</label>
      <input 
        type="text" 
        id="vol_email" 
        name="vol_email" 
        value="<%= volunteer.vol_email %>" 
        required 
        placeholder="Enter email address"
      >
    </div>
    

    <!-- Volunteer Phone Number -->
    <div>
      <label for="vol_phone_num">Phone Number:</label>
      <input 
        type="tel" 
        id="vol_phone_num" 
        name="vol_phone_num" 
        value="<%= volunteer.vol_phone_num %>" 
        required 
        placeholder="Enter phone number"
      >
    </div>

    <!-- Volunteer ZIP -->
    <div>
      <label for="vol_zip">ZIP Code:</label>
      <input 
        type="text" 
        id="vol_zip" 
        name="vol_zip" 
        value="<%= volunteer.vol_zip %>" 
        required 
        placeholder="Enter ZIP code"
      >
    </div>

    <!-- Referral Source -->
    <div>
      <label for="referral_source">Referral Source:</label>
      <select id="referral_source" name="referral_source" required>
        <option value="" disabled selected>Select a referral source</option>
        <option value="Friend" <%= volunteer.referral_source === 'Friend' ? 'selected' : '' %>>Friend</option>
        <option value="Referral" <%= volunteer.referral_source === 'Referral' ? 'selected' : '' %>>Referral</option>
        <option value="Facebook" <%= volunteer.referral_source === 'Facebook' ? 'selected' : '' %>>Facebook</option>
        <option value="Event" <%= volunteer.referral_source === 'Event' ? 'selected' : '' %>>Event</option>
        <option value="Website" <%= volunteer.referral_source === 'Website' ? 'selected' : '' %>>Website</option>
      </select>
    </div>
    

    <!-- Sewing Level -->
    <div>
      <label for="sewing_level">Sewing Level:</label>
      <select id="sewing_level" name="sewing_level" required>
        <option value="Beginner" <%= volunteer.sewing_level === 'Beginner' ? 'selected' : '' %>>Beginner</option>
        <option value="Intermediate" <%= volunteer.sewing_level === 'Intermediate' ? 'selected' : '' %>>Intermediate</option>
        <option value="Advanced" <%= volunteer.sewing_level === 'Advanced' ? 'selected' : '' %>>Advanced</option>
      </select>
    </div>

    <!-- Willing Hours Per Month -->
    <div>
      <label for="willing_hours_per_month">Willing Hours Per Month:</label>
      <input 
        type="number" 
        id="willing_hours_per_month" 
        name="willing_hours_per_month" 
        value="<%= volunteer.willing_hours_per_month %>" 
        required 
        min="0" 
        placeholder="Enter hours"
      >
    </div>

    <!-- Member Since -->
    <div>
      <label for="member_since">Member Since:</label>
      <input 
        type="date" 
        id="member_since" 
        name="member_since" 
        value="<%= volunteer.member_since %>" 
        readonly 
      >
    </div>

    <!-- Submit Button -->
    <div>
      <button type="submit" class="button">Save Changes</button>
    </div>
  </form>
</body>
</html>
